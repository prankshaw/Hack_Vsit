                    <h4>Notes</h4>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="well dash-box">
                    <h2><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </h2>
                    <h4>Posts</h4>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="well dash-box">
                    <h2><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> </h2>
                    <h4>Visitors</h4>
                  </div>
                </div>
              </div>
            </div>

            <!--latest users-->
            <div class="panel panel-default">
                <div class="panel-heading">Latest Notes</h3>

                </div>
                <div class="panel-body">
                  <ul id="upload">
                    <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                      Search Notes
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                      <li><a href="/adminloggedinbuzzer%34%">All Notes</a></li>
                      <li><a href="/admin/upload/Semester 1">Semester 1</a></li>
                      <li><a href="/admin/upload/Semester 2">Semester 2</a></li>
                      <li><a href="/admin/upload/Semester 3">Semester 3</a></li>
                      <li><a href="/admin/upload/Semester 4">Semester 4(Comming Soon!)</a></li>

                    </ul>
                  </div>
                  <br>
