                {{/if}}

                {{#if error_msg}}
                  <div class="alert alert-danger">{{error_msg}}</div>
                {{/if}}

                {{#if error}}
                  <div class="alert alert-danger">{{error}}</div>
                {{/if}}
                <table class="table  table-striped table-hover" id="table">
                <br>
                <tr>

                  {{#each data}}
                 <td>{{this.uploadfilename}}</td>
                  <td>{{this.Semester}}</td>
                  <td><a id="submit" href="http://res.cloudinary.com/leonardm/image/upload/v1499879798/{{this.uploadfilename}}" class="btn btn-primary">download</a>
                  <a id="" href=" /upload/delete/{{this.uploadfilename}}" class="btn btn-danger">delete</a></td>



                </tr>
                </tr>
                  {{/each}}
                </table>
                </ul>
                </div>
              </div>

        </div>
      </div>
